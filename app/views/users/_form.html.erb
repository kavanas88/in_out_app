<%= form_with(model: user, local: true, class: 'form-group') do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :first_name, :required => true, class: "form-control", placeholder: "First Name" %>
  </div>

  <div class="field">
    <%= form.text_field :last_name, :required => true, class: "form-control", placeholder: "Last Name" %>
  </div>

  <div class="field">
    <%= form.select :eventType, ['Check-In', 'Check-Out'], :required => true%>
  </div>

  <div class="actions">
    <%= form.submit class: "btn-primary", value: "Clock Event" %>
  </div>
<% end %>
